{
    "compilerOptions": {
        "module": "es2015",
        "target": "es2015",
        "noImplicitAny": false,
        "jsx": "react",
        "outDir": "build",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "sourceMap": true
    },
    "filesGlob": [
        "typings/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "build",
        "node_modules",
        "App.js",
        "App.test.js"
    ]
}